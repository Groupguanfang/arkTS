{
  "name": "@arkts/language-plugin",
  "version": "1.0.4",
  "description": "ArkTS Volar Language Plugin.",
  "author": "Naily Zero <zero@naily.cc>",
  "license": "MIT",
  "homepage": "https://github.com/Groupguanfang/arkTS/tree/main/packages/language-plugin",
  "repository": {
    "type": "git",
    "url": "https://github.com/Groupguanfang/arkTS",
    "directory": "packages/language-plugin"
  },
  "bugs": {
    "url": "https://github.com/Groupguanfang/arkTS/issues",
    "email": "zero@naily.cc"
  },
  "keywords": [
    "language-server",
    "language-server-protocol",
    "harmonyos",
    "arkts",
    "ets"
  ],
  "exports": {
    ".": {
      "types": {
        "import": "./out/index.d.mts",
        "require": "./out/index.d.cts"
      },
      "import": "./out/index.mjs",
      "require": "./out/index.js"
    },
    "./out/*": "./out/*"
  },
  "main": "./out/index.js",
  "module": "./out/index.mjs",
  "types": "./out/index.d.ts",
  "files": [
    "bin",
    "out",
    "src"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown --tsconfig ./tsconfig.build.json",
    "prepublishOnly": "tsdown --tsconfig ./tsconfig.build.json",
    "release": "pnpm publish"
  },
  "dependencies": {
    "@volar/language-core": "catalog:prod",
    "@volar/typescript": "catalog:prod",
    "vscode-uri": "catalog:prod"
  }
}
