{
  "scopeName": "source.hml",
  "name": "HML",
  "patterns": [
    {
      "include": "text.html.basic"
    },
    {
      "begin": "(\\{\\{)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.interpolation.begin.hml"
        }
      },
      "end": "(\\}\\})",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.interpolation.end.hml"
        }
      },
      "name": "expression.embedded.hml",
      "patterns": [
        {
          "begin": "\\G",
          "end": "(?=\\}\\})",
          "name": "source.js.embedded.hml",
          "patterns": [
            {
              "include": "source.js#expression"
            }
          ]
        }
      ]
    }
  ]
}
