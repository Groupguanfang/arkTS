{
  "comments": {
    "lineComment": "<!--",
    "blockComment": ["<!--", "-->"]
  },
  "brackets": [
    ["<", ">"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "autoClosingPairs": [
    { "open": "<", "close": ">" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "<!--", "close": "-->" },
    { "open": "{", "close": "}" }
  ],
  "surroundingPairs": [
    ["<", ">"],
    ["\"", "\""],
    ["'", "'"],
    ["{", "}"]
  ],
  "autoCloseBefore": ";:.,=}])>`\"'",
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "indentationRules": {
    "increaseIndentPattern": "<(?!\\?|(?:area|base|br|col|frame|hr|html|img|input|link|meta|param)\\b|[^>]*\\/>)([a-zA-Z][a-zA-Z0-9]*)\\b[^>]*>(?!.*<\\/\\1>)",
    "decreaseIndentPattern": "^\\s*<\\/(?!\\?|(?:area|base|br|col|frame|hr|html|img|input|link|meta|param)\\b)([a-zA-Z][a-zA-Z0-9]*)\\b[^>]*>"
  },
  "folding": {
    "markers": {
      "start": "^\\s*<!--\\s*#region\\b.*-->",
      "end": "^\\s*<!--\\s*#endregion\\b.*-->"
    }
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*<!--",
      "afterText": "-->",
      "action": {
        "indent": "indentOutdent",
        "appendText": " "
      }
    }
  ]
}
