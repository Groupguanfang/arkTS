{
  "compilerOptions": {
    "composite": true,
    "target": "ES2021",
    "lib": [
      "ES2021"
    ],
    "baseUrl": "./",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "paths": {
      "@arkts/language-server": [
        "packages/language-server/src"
      ],
      "@arkts/shared": [
        "packages/shared/src"
      ],
      "@arkts/language-plugin": [
        "packages/language-plugin/src"
      ]
    },
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,

    "noUnusedParameters": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true
  }
}
