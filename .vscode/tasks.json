{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "compile",
      "group": "build",
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "__________"
        },
        "background": {
          "beginsPattern": "building\\.\\.\\.",
          "endsPattern": "finished\\."
        }
      }
    },
    {
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Build start",
          // Match the vite build in xxxms
          "endsPattern": "built in"
        }
      },
      "group": "build"
    }
  ]
}
